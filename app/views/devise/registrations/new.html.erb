<h2 class="text-2xl font-semibold mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'space-y-4 mb-4' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 p-2 w-full border rounded-md' %>
  </div>

  <div class="field">
    <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %>
    <% if @minimum_password_length %>
    <em class="text-xs text-gray-500">( <%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 p-2 w-full border rounded-md' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 p-2 w-full border rounded-md' %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "Sign up", class: 'cursor-pointer py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
