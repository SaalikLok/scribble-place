<h2 class="text-2xl font-semibold mb-4">Your Account</h2>

<h4 class="text-xl font-semibold mt-6 mb-2">Edit Account Details</h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'space-y-4 mb-4' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 p-2 w-full border rounded-md' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="text-sm text-gray-600 mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: 'block text-sm font-medium text-gray-700' %> <i class="text-xs text-gray-500">(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 p-2 w-full border rounded-md' %>
    <% if @minimum_password_length %>
      <em class="text-xs text-gray-500 block mb-1"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-700' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 p-2 w-full border rounded-md' %>
  </div>

  <div class="field">
    <%= f.label :timezone, "Time Zone", class: 'block text-sm font-medium text-gray-700' %>
    <%= f.select :timezone, ActiveSupport::TimeZone.all.map { |tz| [tz.to_s, tz.name] }, { selected: f.object.timezone }, class: 'mt-1 block w-full p-2 border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm' %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: 'block text-sm font-medium text-gray-700' %> <i class="text-xs text-gray-500">(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'mt-1 p-2 w-full border rounded-md' %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "Update", class: 'cursor-pointer py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
  </div>
<% end %>

<h4 class="text-xl font-semibold mt-6 mb-2">Log Out</h4>
<div class="mb-4">
  <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: 'py-2 px-4 border border-red-600 text-red-600 hover:bg-red-600 hover:text-white rounded-md' %>
</div>

<h4 class="text-xl font-semibold mt-6 mb-2">Cancel my account</h4>
<div class="mb-4">
  <p class="mb-2">Clicking this button will delete your account, and your Scribbles will be unreachable.</p>
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'py-2 px-4 border border-red-600 text-red-600 hover:bg-red-600 hover:text-white rounded-md' %>
</div>
