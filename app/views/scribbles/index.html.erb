
<h2 class="text-xl mb-3">Your Scribbles</h2>

<% if @scribbles.empty? %>
  No Scribbles here...  
<% else %>
  <div class="flex flex-col mx-5 border-t-2 border-stone-900">
    <% for scribble in @scribbles %>
      <%= render partial: "scribble", locals: { content: scribble.content, time: scribble.updated_at } %>
    <% end %>
  </div>
<% end %>

<%= link_to "New Scribble", new_scribble_path,
    class: "bg-emerald-600 text-gray-100 rounded-md p-3 mt-3 transform hover:scale-105 transition ease-in-out duration-200"
%>
