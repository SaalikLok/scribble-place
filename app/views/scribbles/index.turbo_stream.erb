<%= turbo_stream.append "all_scribbles" do %>
  <%= render partial: "scribble", collection: @scribbles %>
<% end %>

<%= turbo_stream.update "load_more_scribbles_button" do %>
  <% if @pagy.next.present? %>
    <%= button_to "Load More", pagy_url_for(@pagy, @pagy.next), class: "bg-cyan-700 text-white font-bold py-2 px-4 rounded hover:scale-105 transition ease-in-out duration-200" %>
  <% end %>
<% end%>
