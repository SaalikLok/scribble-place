<%= form_for(@scribble, as: :scribble) do |f| %>
  <div class="mb-4">
    <%= f.text_area :content, rows: 5, class: "resize-none w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring focus:ring-emerald-600" %>
  </div>

  <%= f.submit "Scribble!", class: "bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>
