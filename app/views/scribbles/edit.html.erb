<h3>Edit Scribble</h3>

<%= form_for(@scribble, as: :scribble) do |f| %>
  <div class="mb-1" data-controller="composer">
    <%= f.text_area :content, 
                    rows: 15, 
                    class: "text-lg resize-none w-full h-4/5 screen-80 px-3 py-2 border-none focus:outline-none focus:ring-0 focus:border-transparent overflow-auto", 
                    maxlength: 1000, 
                    autofocus: true,
                    data: { target: "composer.count", action: "input->composer#updateCount" }
    %>

    <div class="mt-2 flex justify-between">
      <p data-composer-target="count"></p>
      <%= f.submit "Save Edited", class: "bg-cyan-700 text-white font-bold py-2 px-4 rounded hover:scale-105 transition ease-in-out duration-200" %>
    </div>
  </div>
<% end %>

<div class="flex justify-end">
  <%= button_to "Delete", 
                @scribble, 
                method: :delete, 
                onclick: "return confirm('Are you sure you want to delete this Scribble?')", 
                class: "bg-red-700 text-white font-bold py-2 px-4 rounded hover:scale-105 transition ease-in-out duration-200" 
  %>
</div>
